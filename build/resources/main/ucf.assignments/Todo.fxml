        </font></Text>
    <Label text="Name: " GridPane.columnIndex="2" GridPane.rowIndex="21" />
    <TextField GridPane.columnIndex="3" GridPane.rowIndex="21" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="23">
    <Button onAction="#handlenewfileButtonAction" text="Save" />
    </HBox>


    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Todo List 1" GridPane.columnIndex="6" GridPane.rowIndex="13">
    </Label>
    <TableView fx:id="tableView" prefHeight="86.0" prefWidth="300.0"  GridPane.columnIndex="6" GridPane.rowIndex="16">
        <columns>
            <TableColumn text="Item">
                <cellValueFactory><PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Description">
                <cellValueFactory><PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Due Date">
                <cellValueFactory><PropertyValueFactory property="duedate" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Item title="cookies" description="pillsbury chocolate chip"
                      duedate="2021-29-10"/>
            </FXCollections>
        </items>
    </TableView>


    <Label style="-fx-font: NORMAL 20 Tahoma;" text="All Lists" GridPane.columnIndex="2" GridPane.rowIndex="13">
    </Label>
    <TableView fx:id="Todolistview" prefHeight="86.0" prefWidth="300.0" GridPane.columnIndex="2" GridPane.rowIndex="16">
        <columns>
            <TableColumn text="Name of List">
                <cellValueFactory><PropertyValueFactory property="Name" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">
                <TodoList name="Todo List 1"/>
            </FXCollections>
        </items>
    </TableView>


    <Text fx:id="actiontarget" GridPane.columnIndex="6" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="26" />

    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem onAction="#handleNewF" text="New File" />
                    <MenuItem onAction="#handleNewF" text="Open Exiting List" />

                    <MenuItem text="Delete" />
                    <MenuItem text="Save List" />
                    <MenuItem text="Save As" />
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" />
                </items>
            </Menu>
            <Menu text="Items">
                <items>

                    <MenuItem onAction="#handleEditI" text="Edit Item" />
                    <MenuItem onAction="#handleNewI" text="New Item" />
                    <MenuItem onAction="#handleDeleteI" text="Delete Iem" />

                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem disable="true" text="Search" />
                    <MenuItem text="Online Manual" visible="false" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#handleAboutAction" text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

